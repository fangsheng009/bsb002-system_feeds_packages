+        PROP_POSITION,
+        PROP_VOLUME,
+        PROP_MUTE,
+        PROP_CAN_SEEK,
+        PROP_DURATION
+};
+
+enum {
+        PLAYING,
+        PAUSED,
+        EOS,
+        ERROR,
+        LAST_SIGNAL
+};
+
+static guint signals[LAST_SIGNAL];
+
+#define TICK_TIMEOUT 0.5
+
+/* TODO: Possibly retrieve these through introspection. The problem is that we
